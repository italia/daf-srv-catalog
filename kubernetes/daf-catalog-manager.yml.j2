apiVersion: v1
kind: Service
metadata:
  name: catalog-manager
  labels:
    app: catalog-manager
spec:
  type: NodePort
  ports:
  - port: 9000
    protocol: TCP
    name: http
  selector:
    app: catalog-manager
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: catalog-manager-deployment
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: catalog-manager
    spec:
      containers:
      - name: catalog-manager
        image: {{ nexus_servicename }}.{{ env_name }}.{{ env_domain }}/daf-catalog-manager:2.0.25
        env:
        - name: JAVA_OPTS
          value: "-server -XX:+UseG1GC -XX:MaxGCPauseMillis=100 -XX:+PerfDisableSharedMem -XX:+ParallelRefProcEnabled -Xmx2g -Xms2g -XX:MaxPermSize=1024m"
        - name: PLAY_CRYPTO
          valueFrom:
            secretKeyRef:
              name: daf-secret
              key: play_crypto
        - name: MONGO_USER_PWD
          valueFrom:
            secretKeyRef:
              name: daf-secret
              key: mongo_user_pwd
        - name: PAC4J_CRYPTO
          valueFrom:
            secretKeyRef:
              name: daf-secret
              key: pac4j_crypto
        - name: LDAP_USER_PWD
          valueFrom:
            secretKeyRef:
              name: daf-secret
              key: ldap_user_pwd
        - name: CKAN_ADMIN_PWD
          valueFrom:
            secretKeyRef:
              name: daf-secret
              key: ckan_admin_pwd
        - name: KYLO_USER_PWD
          valueFrom:
            secretKeyRef:
              name: daf-secret
              key: kylo_user_pwd
        imagePullPolicy: Always
        #lifecycle:
        #  postStart:
        #    exec:
        #     command: ["/bin/sh", "-c", "cat /etc/extra_hosts >> /etc/hosts"]
        ports:
        - name: client
          containerPort: 9000
        resources:
          limits:
            memory: 2548Mi
        securityContext:
          privileged: true
          runAsUser: 0
        volumeMounts:
        - name: config-volume
          mountPath: /opt/docker/conf/mnt
        - name: catalog-manager-logback-volume
          mountPath: /opt/docker/conf/logback.xml
          subPath: logback.xml
#        - name: glusterfsvol
#          mountPath: /opt/docker/logs
#          subPath: catalog-manager/logs
        - name: hosts
          mountPath: /etc/extra_hosts
        - name: krb5conf
          mountPath: /etc/krb5.conf
#        - name: hadoopconf
#          mountPath: /etc/hadoop/conf
#          readOnly: true
      imagePullSecrets:
        - name: regsecret
      volumes:
      - name: catalog-manager-logback-volume
        configMap:
          name: catalog-manager-logback
      - name: config-volume
        configMap:
          name: catalog-manager-conf
#      - name: glusterfsvol
#        persistentVolumeClaim:
#          claimName: gluster-claim
      - name: hosts
        hostPath:
          path: /etc/hosts
      - name: krb5conf
        hostPath:
          path: /etc/krb5.conf
#      - name: hadoopconf
#        hostPath:
#          path: /etc/hadoop/conf
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                - key: "nifi"
                  operator: NotIn
                  values: ["true"]
